<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Document</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto mt-4">
                <a href="/blog/add-blog" class="btn btn-primary mb-4">Add blog</a>

                <% if (message) { %>
                    <div
                        class="alert alert-dismissible fade show alert-<%= message.type %>"
                        role="alert"
                    >
                        <%= message.text %>
                        <button
                            class="btn-close"
                            type="button"
                            data-bs-dismiss="alert"
                            aria-label="Close"
                        ></button>
                    </div>
                <% } %>

                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% blogs.forEach((blog) => { %>
                                <tr>
                                    <td><%= blog.title %></td>
                                    <td><%= blog.content %></td>
                                    <td><img src="/<%= blog.image %>" alt="Image" width="50"></td>
                                    <td>
                                        <a href="/edit-blog/<%= blog._id %>" class="text-success">
                                            <i class="fas fa-edit fa-lg mx-1"></i>
                                        </a>
                                        <a href="/delete-blog/<%= blog._id %>" class="text-danger" onclick="return confirm('Are you sure you want to delete this post?')">
                                            <i class="fas fa-trash-alt fa-lg mx-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/footer") %>

</body>
</html>
